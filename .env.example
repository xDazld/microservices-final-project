# DNS Shield Docker Compose Configuration
# Copy this file to .env and adjust values as needed

# Database Configuration
DB_NAME=dns_shield
DB_USER=dns_user
DB_PASSWORD=dns_password
DB_ROOT_PASSWORD=rootpassword

# Grafana Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Application Configuration
APP_ENV=development
APP_DEBUG=false

# RFC 5358 Compliance
RFC5358_RECURSION_ENABLED=true
RFC5358_DEFAULT_DENY=false

# RFC 8767 Stale Data Configuration
STALE_MAX_AGE_SECONDS=86400
STALE_CLIENT_TIMEOUT_MS=1800
STALE_FAILURE_RECHECK_SECONDS=30

# RFC 9520 Negative Caching
NEGATIVE_CACHE_MIN_DURATION=1
NEGATIVE_CACHE_MAX_DURATION=300
DNS_RESOLVER_MAX_RETRIES=2

# Statistics
STATISTICS_ENABLED=true
TRACK_PAYLOAD_SIZE=true

